<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="d-flex">
        <!-- Main Panel -->
        <div class="main-panel flex-grow-1">
            <div class="content container my-4">
                <div class="row">
                    <div class="col-lg-3 col-md-6">
                        <div class="card">
                            <div class="card-body d-flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-chart-line text-success fs-1"></i>
                                </div>
                                <div class="ms-3">
                                    <p class="mb-1 text-muted">Doanh Thu</p>
                                    <h5>350,000,000 VND</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-7">
                        <div class="card">
                            <div class="card-body d-flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-shopping-cart text-warning fs-1"></i>
                                </div>
                                <div class="ms-3">
                                    <p class="mb-1 text-muted">Lượt mua</p>
                                    <h5>350</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="card">
                            <div class="card-body d-flex">
                                <div class="flex-shrink-0">
                                    <i class=" fas fa-users text-primary fs-1"></i>
                                </div>
                                <div class="ms-3">
                                    <p class="mb-1 text-muted">Lượt truy cập</p>
                                    <h5>345</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Lựa chọn mốc thời gian -->
                <div class="row mt-3">
                    <div class="col-12">
                        <select id="timeRange" class="form-select w-25">
                            <option value="3">3 tháng</option>
                            <option value="6" selected>6 tháng</option>
                            <option value="9">9 tháng</option>
                            <option value="12">12 tháng</option>
                        </select>
                    </div>
                </div>
                <!-- Biểu đồ -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Thống kê doanh thu</h5>
                                <canvas id="revenueChart" style="height: 300px;"></canvas>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Chart.js Script -->
    <script>
        const ctx = document.getElementById('revenueChart').getContext('2d');
        const revenueChart = new Chart(ctx, {
            type: 'bar', // Kiểu biểu đồ: bar (biểu đồ thanh)
            data: {
                labels: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5', 'Tháng 6'], // Các nhãn
                datasets: [{
                    label: 'Doanh thu (VND)',
                    data: [12000000, 15000000, 18000000, 22000000, 20000000, 24000000], // Dữ liệu
                    backgroundColor: [
                        'rgba(75, 192, 192, 0.2)', // Màu nền
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)',
                        'rgba(255, 99, 132, 0.2)'
                    ],
                    borderColor: [
                        'rgba(75, 192, 192, 1)', // Màu viền
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)',
                        'rgba(255, 99, 132, 1)'
                    ],
                    borderWidth: 1 // Độ dày viền
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true // Trục Y bắt đầu từ 0
                    }
                }
            }
        });
    </script>
</body>
</html>
