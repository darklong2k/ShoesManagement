                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="TrangGioiThieu">Giới thiệu</a></li>

                    </ul>

                    <!-- Form tìm kiếm -->
                    <form class="d-flex ms-3" id="formSearch">
