<div class="container my-4" style="max-width: 850px;">
    <ul class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="gio-hang">Giỏ hàng</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            Thông tin giao hàng
        </li>
    </ul>
    <div class="mb-4">
        <h2 class="h4">Thông tin giao hàng</h2>
    </div>
    <div>
        <form>
            <div class="row mb-3">
                <!-- Họ và tên (7 phần) -->
                <div class="col-md-9">
                    <input type="text" id="billing_address_full_name" name="billing_address_full_name" class="form-control text-capitalize" placeholder="Họ và tên" required style="font-size: 14px; padding: 0.5rem;">
                </div>
                <!-- Số điện thoại (3 phần) -->
                <div class="col-md-3">
                    <input type="tel" id="billing_address_phone" name="billing_address_phone" class="form-control" placeholder="Số điện thoại" maxlength="12" minlength="10" required style="font-size: 14px; padding: 0.5rem;">
                </div>
            </div>

            <!-- Địa chỉ -->
            <div class="mb-3">
                <input type="text" id="billing_address_address" name="billing_address_address" class="form-control text-capitalize" placeholder="Địa chỉ" required style="font-size: 14px; padding: 0.5rem;">
            </div>

            <!-- Email -->
            <div class="mb-3">
                <input type="email" id="billing_email" name="billing_email" class="form-control" placeholder="Email: example@domain.com" required style="font-size: 14px; padding: 0.5rem;">
            </div>
            <!-- Nội dung -->
            <div class="mb-3">
                <textarea id="billing_note" name="billing_note" class="form-control" placeholder="Nội dung" style="font-size: 14px; padding: 0.5rem;"></textarea>
            </div>
            <div class="d-flex justify-content-between mt-4">
                <!-- Nút quay lại giỏ hàng -->
                <a href="gio-hang" class="btn btn-outline-secondary" style="font-size: 14px;">
                    <i class="fas fa-arrow-left"></i> Quay lại giỏ hàng
                </a>
                <!-- Nút tiếp tục đến phương thức thanh toán -->
                <a asp-area="" asp-controller="Home" asp-action="TrangThanhToan" class="btn btn-primary" style="font-size: 14px;">
                    Tiếp tục đến phương thức thanh toán <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </form>
    </div>
</div>
