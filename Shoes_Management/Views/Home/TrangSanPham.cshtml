@{
    ViewData["Title"] = "Sản phẩm";
}

<link href="css/product.css" rel="stylesheet" />
<script src="js/product.js"></script>

<!-- Bộ lọc và hiển thị số lượng sản phẩm -->
<section class="pt-4 pb-2 bg-light">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="fw-bold mb-0">Sản phẩm</h3>
            <span class="text-muted">Tổng số sản phẩm: <strong>100</strong></span>
        </div>
        <div class="row">
            <div class="col-lg-3 col-md-4">
                <div class="border rounded p-3 mb-3">
                    <h5 class="fw-bold mb-3">Bộ lọc</h5>
                    <!-- Bộ lọc danh mục -->
                    <div class="mb-3">
                        <h6 class="fw-bold">Danh mục</h6>
                        <select class="form-select">
                            <option selected>Tất cả</option>
                            <option>Giày nam</option>
                            <option>Giày nữ</option>
                            <option>Phụ kiện</option>
                        </select>
                    </div>
                    <!-- Bộ lọc giá -->
                    <div class="mb-3">
                        <h6 class="fw-bold">Khoảng giá</h6>
                        <div class="d-flex">
                            <input type="number" class="form-control me-2" placeholder="Từ" />
                            <input type="number" class="form-control" placeholder="Đến" />
                        </div>
                    </div>
                    <!-- Bộ lọc thương hiệu -->
                    <div class="mb-3">
                        <h6 class="fw-bold">Thương hiệu</h6>
                        <div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="brand1" />
                                <label class="form-check-label" for="brand1">Nike</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="brand2" />
                                <label class="form-check-label" for="brand2">Adidas</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="brand3" />
                                <label class="form-check-label" for="brand3">Puma</label>
                            </div>
                        </div>
                    </div>
                    <!-- Nút áp dụng -->
                    <button class="btn btn-primary w-100">Áp dụng</button>
                </div>
            </div>
            <div class="col-lg-9 col-md-8">
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4" id="listProd">
                    <!-- Vòng lặp danh sách sản phẩm -->
                    

                    <!-- Thêm sản phẩm khác -->
                </div>

                <!-- Phân trang -->
                <nav class="mt-4">
                    <ul class="pagination justify-content-center" id="PhanTrang">
                        
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function(){
        let currentPage=1;
        function loadProduct(page)
        {
            $('#listProd').empty();
            $('#PhanTrang').empty();
            $.ajax({
            url:`https://localhost:7103/api/homeapi/products_Page?page=${page}`,
            type:'GET',
            success:function(res){
                var html;
                res.products.forEach(function(product){
                    var rating = '★'.repeat(Math.floor(product.ratingAvg))+'☆'.repeat(5 - (Math.floor(product.ratingAvg)));
                    html = `
                        <div class="col">
                        <div class="card h-100">
                            <a href="#">
                                <img src="https://kingshoes.vn/data/upload/thumb/sneaker-315122-111-air-force-1-07-nike-kingshoesvn-tphcm-tanbinh-17-logo-1551924204-jpg/500_SNEAKER-315122-111-AIR-FORCE-1-07-NIKE-KINGSHOES.VN-TPHCM-TANBINH-17-logo-1551924204-.jpg.webp" class="card-img-top" alt="Sản phẩm">
                            </a>
                            <div class="card-body">
                                <h5 class="card-title">${product.name}</h5>
                                <p class="text-warning">${rating}</p>
                                <p class="text-danger fw-bold">${product.price.toLocaleString()}đ</p>
                            </div>
                        </div>
                    </div>
                    `;
                    $('#listProd').append(html);
                });
                for(let i = 1; i <= res.totalPage;i++){
                    const activeClass = i == page ? 'active' : '';
                    $('#PhanTrang').append(`
                        <li class="page-item ${activeClass}">
                            <a class ="page-link" href="#" data-page="${i}">${i}</a>
                        </li>
                    `);
                }
            }
        });
        }
        $(document).on('click','.page-link',function(e){
            e.preventDefault();
            const page = $(this).data('page');
            if(page){
                currentPage=page;
                loadProduct(currentPage);
            }
        });
        loadProduct(currentPage);
    });
</script>