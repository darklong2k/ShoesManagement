<div class="container my-5">
    <form action="/profile" method="post" enctype="multipart/form-data" id="form_login">
        <!-- Header -->
        <div class="mb-4">
            <h1 class="h4">Hồ sơ của tôi</h1>
            <p>Quản lý thông tin hồ sơ để bảo mật tài khoản</p>
        </div>

        <!-- Body -->
        <div class="row">
            <!-- Form Inputs -->
            <div class="col-md-8">
                <!-- Tên đăng nhập -->
                <div class="mb-3">
                    <label for="UserName" class="form-label">Tên đăng nhập</label>
                    <input id="UserName" name="UserName" type="text" class="form-control" readonly value="aaabbbccc">
                </div>

                <!-- Tên -->
                <div class="mb-3">
                    <label for="FullName" class="form-label">Tên</label>
                    <input id="FullName" name="FullName" type="text" class="form-control" placeholder="Họ và tên" value="Hung">
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label for="Email" class="form-label">Email</label>
                    <input id="Email" name="Email" type="email" class="form-control" placeholder="Email" value="aaabbbccc@gmail.com">
                </div>

                <!-- Số điện thoại -->
                <div class="mb-3">
                    <label for="Phone" class="form-label">Số điện thoại *</label>
                    <input id="Phone" name="Phone" type="tel" class="form-control" placeholder="Số điện thoại" value="0925999999" required>
                </div>

                <!-- Giới tính -->
                <div class="mb-3">
                    <label class="form-label">Giới tính</label>
                    <div class="d-flex gap-3">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Gender" id="GenderMale" value="1" checked>
                            <label class="form-check-label" for="GenderMale">Nam</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Gender" id="GenderFemale" value="0">
                            <label class="form-check-label" for="GenderFemale">Nữ</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Gender" id="GenderOther" value="2">
                            <label class="form-check-label" for="GenderOther">Khác</label>
                        </div>
                    </div>
                </div>

                <!-- Ngày sinh -->
                <div class="mb-3">
                    <label class="form-label">Ngày sinh</label>
                    <div class="d-flex gap-2">
                        <select id="Day" name="Day" class="form-select">
                            <option value="" selected>Ngày</option>
                            <option value="1" selected>1</option>
                            <option value="2">2</option>
                            <!-- Thêm các ngày khác -->
                        </select>
                        <select id="Month" name="Month" class="form-select">
                            <option value="" selected>Tháng</option>
                            <option value="1" selected>1</option>
                            <option value="2">2</option>
                            <!-- Thêm các tháng khác -->
                        </select>
                        <select id="Year" name="Year" class="form-select">
                            <option value="" selected>Năm</option>
                            <option value="2024" selected>2024</option>
                            <!-- Thêm các năm khác -->
                        </select>
                    </div>
                </div>

                <!-- Địa chỉ -->
                <h4 class="mt-4">Thông tin nhận hàng</h4>
                <div class="mb-3">
                    <label for="provinceOptions" class="form-label">Tỉnh/Thành phố</label>
                    <select id="provinceOptions" name="ProvinceId" class="form-select">
                        <option value="">-- Chọn tỉnh --</option>
                        <option value="1">Chọn Tỉnh/Thành</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="districtSelect" class="form-label">Quận/Huyện</label>
                    <select id="districtSelect" name="DistrictId" class="form-select">
                        <option value="">-- Chọn Quận/Huyện --</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="wardSelect" class="form-label">Phường/Xã</label>
                    <select id="wardSelect" name="WardId" class="form-select">
                        <option value="">-- Chọn Xã/Phường --</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="Address" class="form-label">Địa chỉ</label>
                    <input id="Address" name="Address" type="text" class="form-control" placeholder="Địa chỉ" value="42D, NTT">
                </div>

                <!-- Nút lưu -->
                <div class="text-end">
                    <input type="hidden" id="Id" name="Id" value="292880">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </div>

            
        </div>
    </form>
</div>
