<div class="container my-5">
    <h1 class="h4 text-center mb-4">Sản phẩm yêu thích</h1>

    <!-- Bảng danh sách sản phẩm yêu thích -->
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Hình ảnh</th>
                    <th scope="col">Tên sản phẩm</th>
                    <th scope="col">Giá</th>
                    <th scope="col">Hành động</th>
                </tr>
            </thead>
            <tbody id="favorite-products">
                <!-- Sản phẩm 1 -->
                <tr data-id="1">
                    <th scope="row">1</th>
                    <td>
                        <img src="https://via.placeholder.com/78" alt="Product Image" class="img-thumbnail" style="width: 78px; height: 78px;">
                    </td>
                    <td>Vớ nam nữ MWC - AT59</td>
                    <td>30,000₫</td>
                    <td>
                        <button class="btn btn-link text-danger remove-product">
                            <i class="fas fa-heart"></i>
                        </button>
                    </td>
                </tr>

                <!-- Sản phẩm 2 -->
                <tr data-id="2">
                    <th scope="row">2</th>
                    <td>
                        <img src="https://via.placeholder.com/78" alt="Product Image" class="img-thumbnail" style="width: 78px; height: 78px;">
                    </td>
                    <td>Tên sản phẩm 2</td>
                    <td>50,000₫</td>
                    <td>
                        <button class="btn btn-link text-danger remove-product">
                            <i class="fas fa-heart"></i>
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Nếu không có sản phẩm -->
    <div class="text-center mt-5" id="no-favorite" style="display: none;">
        <p class="text-muted">Bạn chưa có sản phẩm yêu thích nào.</p>
        <a href="shop.html" class="btn btn-primary">Khám phá ngay</a>
    </div>
</div>

<script>
    // Xóa sản phẩm khỏi danh sách yêu thích
    document.addEventListener("DOMContentLoaded", function () {
        const productTable = document.getElementById("favorite-products");
        const noFavoriteMessage = document.getElementById("no-favorite");

        productTable.addEventListener("click", function (e) {
            if (e.target.closest(".remove-product")) {
                const productRow = e.target.closest("tr");

                // Xóa sản phẩm khỏi bảng
                productRow.remove();

                // Kiểm tra nếu không còn sản phẩm nào
                if (productTable.children.length === 0) {
                    noFavoriteMessage.style.display = "block";
                }
            }
        });
    });
</script>
